{
  "name": "@vercel/postgres",
  "version": "0.7.2",
  "description": "Connect to Vercel Postgres databases on the Edge",
  "homepage": "https://vercel.com",
  "repository": {
    "type": "git",
    "url": "https://github.com/vercel/storage.git",
    "directory": "packages/postgres"
  },
  "license": "Apache-2.0",
  "type": "module",
  "exports": {
    ".": {
      "import": {
        "edge-light": "./dist/index.js",
        "node": "./dist/index-node.js",
        "default": "./dist/index-node.js"
      },
      "require": {
        "edge-light": "./dist/index.cjs",
        "node": "./dist/index-node.cjs",
        "default": "./dist/index-node.cjs"
      }
    }
  },
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "files": [
    "dist"
  ],
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node"
  },
  "dependencies": {
    "@neondatabase/serverless": "0.7.2",
    "bufferutil": "4.0.8",
    "utf-8-validate": "6.0.3",
    "ws": "8.14.2"
  },
  "devDependencies": {
    "@changesets/cli": "2.27.1",
    "@edge-runtime/jest-environment": "2.3.7",
    "@edge-runtime/types": "2.2.7",
    "@types/jest": "29.5.11",
    "@types/node": "20.10.4",
    "@types/ws": "8.5.10",
    "eslint": "8.55.0",
    "jest": "29.7.0",
    "prettier": "3.1.1",
    "ts-jest": "29.1.1",
    "tsup": "8.0.1",
    "typescript": "5.3.3",
    "eslint-config-custom": "0.0.0",
    "tsconfig": "0.0.0"
  },
  "engines": {
    "node": ">=14.6"
  },
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch --clean=false",
    "lint": "eslint \"src/**/*.ts\"",
    "prettier-check": "prettier --check .",
    "publint": "npx publint",
    "test": "jest --env @edge-runtime/jest-environment .test.ts && jest --env node .test.ts",
    "type-check": "tsc --noEmit"
  }
}